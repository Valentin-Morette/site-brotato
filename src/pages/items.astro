---
import BaseLayout from '../layouts/Layout.astro';
import items from '../../public/assets/jsons/items.json';
---

<BaseLayout title="Items">
  <section class="section-header">
    <h1>Items</h1>
    <p>All items you can find in Brotato.</p>
  </section>
  <div class="bt-card-list">
    {items.map((item) => (
        <div class="bt-card">
            <div class="flex justify-center items-center">
                <h1 class="text-center font-bold">{item.name}</h2>
                <img src={decodeURIComponent(`/${item.imagePath}`)} width="40" alt={item.name} />
            </div>
            <div class="bt-card-description">
                {item.effects
                    ? item.effects.split('\n').map(line => <p>{line}</p>)
                    : <p>No description available.</p>}
            </div>

        </div>
    ))}
</BaseLayout>
