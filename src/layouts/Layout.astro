---
const { title = "Brotato Site" } = Astro.props;
import '../styles/global.css';
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
  </head>
  
  <body>
    <nav class="bg-white shadow-md border-b border-[var(--border-color)]">
      <div class="container mx-auto px-6 py-4">
        <!-- Menu principal -->
        <div class="flex items-center justify-between">
          <!-- Logo ou autre contenu à gauche -->
          <div class="text-xl font-bold text-[var(--text-main)]">
            <a href="/"><img src="/assets/img/characters/60px-Speedy.png" alt="Logo" class="h-8 inline-block mr-2" /> Brotato Wiki</a>
          </div>
    
          <!-- Menu mobile (icône hamburger) -->
          <div class="block md:hidden">
            <button id="menu-icon" class="text-[var(--text-main)]">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
    
          <!-- Menu pour les écrans larges -->
          <ul class="hidden md:flex gap-6 text-base font-medium text-[var(--text-main)]">
            <li><a href="/enemies" class="hover:text-[var(--accent-hover)]">Enemies</a></li>
            <li><a href="/items" class="hover:text-[var(--accent-hover)]">Items</a></li>
            <li><a href="/characters" class="hover:text-[var(--accent-hover)]">Characters</a></li>
            <li><a href="/stats" class="hover:text-[var(--accent-hover)]">Stats</a></li>
            <li><a href="/weapons" class="hover:text-[var(--accent-hover)]">Weapons</a></li>
          </ul>
        </div>
    
        <!-- Menu mobile caché par défaut -->
        <ul id="mobile-menu" class="md:hidden hidden mt-4 text-base font-medium text-[var(--text-main)]">
          <li class="mt-2 border-b border-[var(--border-color)]">
            <a href="/enemies" class="block px-4 py-2 hover:text-[var(--accent-hover)]">Enemies</a>
          </li>
          <li class="mt-2 border-b border-[var(--border-color)]">
            <a href="/items" class="block px-4 py-2 hover:text-[var(--accent-hover)]">Items</a>
          </li>
          <li class="mt-2 border-b border-[var(--border-color)]">
            <a href="/characters" class="block px-4 py-2 hover:text-[var(--accent-hover)]">Characters</a>
          </li>
          <li class="mt-2 border-b border-[var(--border-color)]">
            <a href="/stats" class="block px-4 py-2 hover:text-[var(--accent-hover)]">Stats</a>
          </li>
          <li class="mt-2">
            <a href="/weapons" class="block px-4 py-2 hover:text-[var(--accent-hover)]">Weapons</a>
          </li>
        </ul>
        
      </div>
    </nav>
   
    <slot /> <!-- C'est ici que le contenu de la page va s'injecter -->

    <script type="module" src="/scripts/filterNames.js"></script> 
    <script>
      // Script pour ouvrir et fermer le menu mobile
      document.getElementById("menu-icon")?.addEventListener("click", function() {
        const mobileMenu = document.getElementById("mobile-menu");
        if (mobileMenu) {
          mobileMenu.classList.toggle("hidden");
        }
      });
    </script>
  </body>
</html>